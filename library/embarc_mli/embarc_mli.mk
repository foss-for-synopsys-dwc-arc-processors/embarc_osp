# dir declaration
LIB_EMBARC_MLI_DIR = $(LIBRARIES_ROOT)/embarc_mli

LIB_EMBARC_MLI_INCDIR = $(LIB_EMBARC_MLI_DIR)/include
EXTRA_ASMSRCDIR += $(LIB_EMBARC_MLI_DIR)/src
